{
  "name": "nexuscript-twilio-sms-action",
  "version": "1.0.0",
  "description": "Send SMS messages via twilio",
  "main": "src/index.js",
  "scripts": {
    "dev": "webpack --mode development",
    "build": "webpack --mode production"
  },
  "author": "nexusoft",
  "license": "ISC",
  "devDependencies": {
    "webpack": "^4.12.0",
    "webpack-cli": "^2.1.5"
  },
  "dependencies": {
    "nexusdk": "github:wizebin/nexusdk",
    "twilio": "^3.17.3"
  },
  "nexuscript": {
    "execution_version": "2",
    "type": "action",
    "author": "nexuscript",
    "price": "free",
    "configuration": {
      "to": "string",
      "body": "string"
    },
    "accounts": [
      {
        "name": "twilio",
        "field_name": "twilio_account",
        "type": "modal",
        "fields": {
          "account_sid": "string",
          "auth_token": "string",
          "from": "string"
        }
      }
    ],
    "category": "phone",
    "build_command": "npm run build",
    "dist_folder": "dist",
    "dist_file": "dist/main.js"
  }
}
